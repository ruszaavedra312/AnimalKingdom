@model CRUD_Test.AnimalKindom.Models.UpdateAnimalViewModel

<div>
    <h1 class=" fs-2">
        Update Data
        <i class="fa-solid fa-pen-to-square"></i>
    </h1>
</div>

@if (Model is null)
{
    <span>No Data Found on this Selection</span>
}
else
{
    <form method="post">
        <input type="hidden" asp-for="Id" />

        <div class="row g-3">
            <div class="col-md-6 col-12">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" required />
            </div>
            <div class="col-md-6 col-12">
                <label class="form-label">Age</label>
                <input type="number" class="form-control" asp-for="Age" required />
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6 col-12">
                <label class="form-label">Species</label>
                <select class="form-control" asp-for="Species" asp-items="Model.SpeciesList">
                    <option value="">Select a species</option>
                </select>
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>

            <div class="col-md-6 col-12">
                <label class="form-label">Care Taker</label>
                <input type="text" class="form-control" asp-for="CareTaker" required />
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6 col-12">
                <label class="form-label">Original Place</label>
                <input type="text" class="form-control" asp-for="OriginatedPlace" required/>
            </div>
            <div class="col-md-6 col-12">
                <label class="form-label">Original Owner</label>
                <input type="text" class="form-control" asp-for="OriginalOwner" required/>
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Date Added</label>
            <input type="text" class="form-control" asp-for="DateAdded" readonly />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>
            <a class="btn btn-danger" asp-controller="Animal" asp-action="Read">Cancel</a>
        </div>
    </form>
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessageUpdate" data-message="@TempData["SuccessMessage"]" style="display: none;"></div>
}
