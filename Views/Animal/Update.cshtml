@model CRUD_Test.AnimalKindom.Models.Entities.Animal

<div>
    <h1 class=" fs-2">
        Update Data
        <i class="fa-solid fa-pen-to-square"></i>
    </h1>
</div>

@if (Model is null)
{
    <span>No Data Found on this Selection</span>
}
else
{
    <form method="post">
        <div class="mt-3">
            <input type="hidden" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="row g-3">
            <div class="col-md-6 col-12">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" asp-for="Name" required />
            </div>
            <div class="col-md-6 col-12">
                <label class="form-label">Age</label>
                <input type="number" class="form-control" asp-for="Age" required />
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6 col-12">
                <label class="form-label">Species</label>
                <select class="form-control" asp-for="Species" required>
                    <option value="" disabled selected>Select a species</option>
                    <option value="Dog">Dog</option>
                    <option value="Cat">Cat</option>
                    <option value="Bird">Bird</option>
                    <option value="Fish">Fish</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="col-md-6 col-12">
                <label class="form-label">Care Taker</label>
                <input type="text" class="form-control" asp-for="CareTaker" required />
            </div>
        </div>

        <div class="mt-3">
            <label class="form-label">Date Added</label>
            <input type="text" class="form-control" asp-for="DateAdded" readonly />
        </div>

        <div class="mt-3">
            <button class="btn btn-primary">Save</button>
            <a class="btn btn-danger" asp-controller="Animal" asp-action="Read">Cancel</a>
        </div>
    </form>
}



@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessageUpdate" data-message="@TempData["SuccessMessage"]" style="display: none;"></div>
}
